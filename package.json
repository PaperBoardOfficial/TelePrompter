{
  "name": "teleprompter",
  "version": "1.0.18",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "rimraf dist dist-electron",
    "dev": "cross-env NODE_ENV=production bun run clean && vite build && electron .",
    "dev:prod": "cross-env NODE_ENV=production bun run clean && vite build && electron .",
    "build": "cross-env NODE_ENV=production rimraf dist dist-electron && vite build && electron-builder"
  },
  "build": {
    "appId": "com.paperboardofficial.teleprompter",
    "productName": "TelePrompter",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "electron/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "asar": true,
    "compression": "maximum",
    "generateUpdatesFilesForAllChannels": true,
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "TelePrompter-${arch}.${ext}",
      "icon": "assets/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Developer ID Application",
      "notarize": true,
      "protocols": {
        "name": "teleprompter-protocol",
        "schemes": [
          "teleprompter"
        ]
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/win/icon.ico",
      "artifactName": "${productName}-Windows-${version}.${ext}",
      "protocols": {
        "name": "teleprompter-protocol",
        "schemes": [
          "teleprompter"
        ]
      }
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icons/png/icon-256x256.png",
      "artifactName": "${productName}-Linux-${version}.${ext}",
      "protocols": {
        "name": "teleprompter-protocol",
        "schemes": [
          "teleprompter"
        ]
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "paperboardofficial",
        "repo": "teleprompter",
        "private": false,
        "releaseType": "release"
      }
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "An invisible desktop application to help you get that extra information.",
  "dependencies": {
    "@electron/notarize": "^2.3.0",
    "@google/generative-ai": "^0.24.0",
    "@tanstack/react-query": "^5.64.0",
    "axios": "^1.7.7",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.460.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.6.1",
    "screenshot-desktop": "^1.15.0",
    "sonner": "^2.0.7",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@electron/typescript-definitions": "^8.14.0",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/screenshot-desktop": "^1.12.3",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
